<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tnta.t3h.paymentbook.DateDetailActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView24_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Chi tiết trong tháng" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_chi_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Chi" />

        <TextView
            android:id="@+id/textView8_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar_anuong_month"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_anuong_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView11_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinh hoạt"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar_sinhhoat_month"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_sinhhoat_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView13_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đi lại"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar_dilai_month"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_dilai_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView15_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giải trí"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar_giaitri_month"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_giaitri_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView17_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khác"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar_khac_month"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_khac_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_thu_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Thu" />

        <TextView
            android:id="@+id/textView20_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lương"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar_luong_month"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_luong_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView22_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiết kiệm"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar_tietkiem_month"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_tietkiem_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>
