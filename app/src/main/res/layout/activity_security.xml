<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tnta.t3h.paymentbook.SecurityActivity">

    <EditText
        android:id="@+id/editText_checkpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="numberPassword" />

    <TextView
        android:id="@+id/textView_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_checkpass"
        android:layout_centerHorizontal="true"
        android:text="Nhập mật khẩu"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/button_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_checkpass"
        android:layout_centerHorizontal="true"
        android:text="Xong" />
</RelativeLayout>
